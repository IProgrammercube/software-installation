#!/bin/bash

echo "Running create-folder script"

FOLDER_NAME="demo-folder"

if [ -d "$FOLDER_NAME" ]; then
    echo "Folder already exists: $FOLDER_NAME"
else
    mkdir -p "$FOLDER_NAME"
    echo "Folder created: $FOLDER_NAME"
fi

ls -lrth

    parameters {
        choice(
            name: 'ACTION',
            choices: [
                'create-folder',
                'add-file',
                'append-text',
                'replace-text'
            ],
            description: 'Select the script to run'
        )
    }