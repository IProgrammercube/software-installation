pipeline {
    agent any

    parameters {
        string(
            name: 'FOLDER_NAME',
            defaultValue: 'demo-folder',
            description: 'Enter folder name to create'
        )
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Create Folder') {
            steps {
                sh '''
                   echo "Creating folder: ${FOLDER_NAME}"
                   mkdir -p "${FOLDER_NAME}"
                   echo "Folder created successfully"
                   ls -ld "${FOLDER_NAME}"
                '''
            }
        }
    }
}
