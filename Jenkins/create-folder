pipeline {
    agent any

    parameters {
        string(
            name: 'FOLDER_NAME',
            defaultValue: 'demo-folder',
            description: 'Enter folder name'
        )
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run create-folder script') {
            steps {
                sh '''
                   echo "I am in create Folder"
                   echo "User entered folder name: ${FOLDER_NAME}"
                '''
            }
        }
    }
}
