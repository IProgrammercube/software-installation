pipleline{
    agent any

    // Taking Value from user as parameter
    parameters{
        string(name: 'FOLDER-NAME', defaultValue:'NA' , description:'Enter your Folder name')
    }

    stages
    {
        stage('checkout SCM')
        {
            steps
            {
                checkout SCM
            }
        }
        stage('crete folder')
        {
                steps{
                    sh '''
                        if[ -d "${FOLDER-NAME} ; "] then
                            echo "folder name is Already Exists"
                        else
                            echo "Create Folder"
                            fi
                    '''
                }
        }

    }

}
