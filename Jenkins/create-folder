pipeline
{
    agent any
    parameters
    {
        string(name:'FOLDER_NAME' ,defaultValue:'NA',description:'')
    }

    stages{
        stage('checkout SCM')
        {
            steps{
                checkout scm
            }

        }
        stage('create folder')
        {
            steps{
                  sh '''
                  echo "current Working Directory ${pwd}"
                  ls -lrth

                  # check if the folder exists
                  if [ -d "$FOLDER_NAME" ]; then
                      echo "Folder name is exists"
                  else
                      mkdir -p "$FOLDER_NAME"
                      echo "Listing Directory ${pwd}"
                      ls -lrth   
                  fi
                  '''
            }
        }

    }
}