pipeline {
    agent any

    stages {

        stage('Checkout Main Branch') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/IProgrammercube/software-installation.git',
                    credentialsId: 'githubConnection'
            }
        }

        stage('Print Hello World from Folder') {
            steps {
                dir('Jenkins/create-folder') {
                    sh 'echo "---- Listing files ----"'
                    sh 'ls -l'
                    sh 'echo "---- Printing Hello World ----"'
                    sh 'cat hello.txt'
                }
            }
        }
    }
}
