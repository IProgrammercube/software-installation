pipeline {
    agent any

    // Taking value from user as parameter
    parameters {
        string(
            name: 'FOLDER_NAME',
            defaultValue: 'NA',
            description: 'Enter your folder name'
        )
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Create folder') {
            steps {
                sh '''
                    if [ -d "$FOLDER_NAME" ]; then
                        echo "Folder already exists"
                    else
                        echo "Creating folder"
                        mkdir "$FOLDER_NAME"
                    fi
                '''
            }
        }
    }
}
