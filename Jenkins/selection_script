pipeline
{
    agent any 
    parameters{
        choice(
                name: 'ACTION',
                choices:[
                        'create-folder',
                        'selection_script', 
                        'Add File',
                        'Append text', 
                        'Replace text'
                        ],
                description: 'select the Action you want To perform'
            )
    }

    stages
    {
        stage('checkout SCM')
        {
            steps{
                checkout scm
            }
        }
        stage('select option')
        {
            steps
            {
                script{
                     echo "you selected ${params.ACTION}"
                def selectedAction = params.ACTION
                echo "NOTE : list of script are presnet "
              
                sh '''
                echo "$(pwd)"
                cd Jenkins
                ls -lrth
                sudo cat ${selectedAction"
                '''
                }
               
            }

        }
    }

}