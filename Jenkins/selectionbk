// Selection code bk 


pipeline {
agent any

parameters {
choice(
name: 'ACTION',
choices: [
'create-folder',
'add-file',
'append-text',
'replace-text'
],
description: 'Select the script to run'
)

string(
name: 'TARGET_NAME',
defaultValue: 'demo',
description: 'Folder/File name'
)
}

stages {
stage('Checkout') {
steps {
checkout scm
}
}

stage('Run Selected Script') {
steps {
script {
def scriptPath = "Jenkins/${params.ACTION}"

echo "Running script: ${scriptPath}"

if (!fileExists(scriptPath)) {
error "‚ùå Script not found: ${scriptPath}"
}

sh """
chmod +x ${scriptPath}
./${scriptPath} '${params.TARGET_NAME}'
"""
}
}
}
}
}
